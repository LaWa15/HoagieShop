<p id="notice"><%= notice %></p>

<h1>Hoafies</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Comment</th>
      <th>Username</th>
      <th>Verified</th>
      <th>Likes</th>
      <th>Hoafie of the week</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hoafies.each do |hoafy| %>
      <tr>
        <td><%= image_tag hoafy.picture_url, width: '100%' if hoafy.picture.present? %></td>
        <td><%= hoafy.comment %></td>
        <td><%= hoafy.userName %></td>
        <td><%= hoafy.verified %></td>
        <td><%= hoafy.likes %></td>
        <td><%= hoafy.hoafieOfWeek %></td>
        <td><%= link_to 'Show', hoafy %></td>
        <td><%= link_to 'Edit', edit_hoafy_path(hoafy) %></td>
        <td><%= link_to 'Destroy', hoafy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

